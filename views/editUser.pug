doctype html
html
  head
    title Editar Usuario
    link(rel="stylesheet", href="/css/styles.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Funnel+Display:wght@100;200;300;400;500;600;700;800;900&display=swap")
  body
    if message
      p.success-message #{message}

    .edit-user-form-container
      h1.edit-user-title Editar Usuario
      form.edit-user-form(method='POST', action=`/api/user/${user.id}?_method=PUT`)
        label(for='username') Nombre de usuario
        input(type='text', name='username', value=user.username)

        label(for='email') Correo electrónico
        input(type='email', name='email', value=user.email)

        label(for='password') Contraseña
        input(type='password', name='password')

        label(for='role') Rol
        select(name='role')
          option(value='user', selected=user.role === 'user') Usuario
          option(value='admin', selected=user.role === 'admin') Admin

        button(type='submit') Actualizar usuario

      a.return-to-dashboard(href="/admin/dashboard") Volver a Inicio
