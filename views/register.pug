extends layout

block content
  h1.login-title Registro
  form(action="/register" method="POST" class="login-form")
    label(for="username" class="form-label") Nombre de usuario:
    input(type="text" name="username" required class="form-input")
    label(for="email" class="form-label") Correo electrónico:
    input(type="email" name="email" required class="form-input")
    label(for="password" class="form-label") Contraseña:
    input(type="password" name="password" required class="form-input")
    button(type="submit" class="login-button") Registrar
