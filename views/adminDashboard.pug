//- adminDashboard.pug

extends layout

block content

	h1.admin-title Admin Dashboard
	.button-container
		form.view-users-form(action="/admin/users" method="get")
			button.view-users-button(type="submit") Ver Todos los Usuarios

		form.create-events-form(action="/ads/showFormOneAd" method="get")
			button.create-events-button(type="submit") Crear Nuevos Eventos

		form.scraping-form(action="/admin/scrape" method="get")
			button.scraping-button(type="submit") Hacer SCRAPING

	main.admin-info
	
		.results#resultsContainer

			if ads && ads.length > 0
				include listAds.pug

			else
				p.no-events-message No hay eventos existentes en este momento.

		form#deleteForm(action="/ads/delete" method="POST" style="display: none;")
			input(type="hidden" name="_method" value="DELETE")

